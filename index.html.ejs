<html>

<head>
	<meta charset="utf-8">
	<link rel="stylesheet" href="/public/reveal.js/dist/reset.css">
	<link rel="stylesheet" href="/public/reveal.js/dist/reveal.css">
	<link rel="stylesheet" href="/public/reveal.js/dist/theme/black.css">
	
	<!-- Theme used for syntax highlighted code -->
	<link rel="stylesheet" href="/public/reveal.js/plugin/highlight/monokai.css">
</head>

<body>
	<div class="reveal">
		<div class="slides">
			<% games.forEach(function(game){ %>
				<% const triviaThemesFilePath = path.join(game.fullPath, "trivia.yml") %> 
				
				<section>
					<h1><%= game.name %></h1>
				</section>

				<%- include(`templates/${game.template}.html.ejs`, {name: game.name, fullPath: game.fullPath, path, YAML, fs}); %>
			<% }); %>
		</div>
	</div>

	
	<script src="/public/reveal.js/dist/reveal.js"></script>
	<script src="/public/reveal.js/plugin/notes/notes.js"></script>
	<script src="/public/reveal.js/plugin/markdown/markdown.js"></script>
	<script src="/public/reveal.js/plugin/highlight/highlight.js"></script>
	<script>
		// More info about initialization & config:
		// - https://revealjs.com/initialization/
		// - https://revealjs.com/config/
		Reveal.initialize({
			hash: true,

			// Learn about plugins: https://revealjs.com/plugins/
			plugins: [ RevealMarkdown, RevealHighlight, RevealNotes ]
		});
	</script>
</body>
<script>

</script>
</html>